<!DOCTYPE html>
<head>
    <% include ../layouts/head-client %>
</head>
<body>
    <header>
        <div>
            <a href="/admin" class='button' style="vertical-align:middle" >Daftar Soal</a> | 
            <a href="/admin/add" class='button'style="vertical-align:middle" >Tambahkan Soal Baru</a>  
        </div>    
        <h1 align="right"><%= title %></h1>
    </header>
    <main>
         
        <form action="/admin/edit/<%= res.soal_id %>" method="post" name="form1">
            <table>
                <tr> 
                    <th>Soal</th> 
                    <td colspan="2"><textarea name="soal_ajkuiz" id="soal_ajkuiz" rows="3" cols="35"><%= res.soal_ajkuiz %></textarea></td>
                </tr>
                <tr> 
                    <th>Opsi A</th>
                    <td colspan="2"><textarea name="opsiA_ajkuiz" id="opsiA_ajkuiz" rows="3" cols="35"><%= res.opsiA_ajkuiz %></textarea></td>
                </tr>
                <tr> 
                    <th>Opsi B</th>
                    <td colspan="2"><textarea name="opsiB_ajkuiz" id="opsiB_ajkuiz" rows="3" cols="35"><%= res.opsiB_ajkuiz %></textarea></td>
                </tr>
                <tr> 
                    <th>Opsi C</th>
                    <td colspan="2"><textarea name="opsiC_ajkuiz" id="opsiC_ajkuiz" rows="3" cols="35"><%= res.opsiC_ajkuiz %></textarea></td>
                </tr>
                <tr> 
                    <th>Opsi D</th>
                    <td colspan="2"><textarea name="opsiD_ajkuiz" id="opsiD_ajkuiz" rows="3" cols="35"><%= res.opsiD_ajkuiz %></textarea></td>
                </tr>
               <tr> 
                    <th>Kategori Soal</th>
                    <td>
                        <select id="kategori_ajkuiz" data-style="btn-info" name="kategori_ajkuiz">
                                <option value="">Pilih Kategori</option>
                                <% kategori.forEach(function(row) { %>
                                    <option value="<%= row.nama %>" <% if (row.nama == res.kategori_id){ %>selected <%}%> %> ><%= row.nama %></option>
                                <% }) %>
                        </select>
                    </td>
                    <td><input type="checkbox" id="kategoriBox"><input type="text" id="kategoriText" name="kategori_ajkuiz" disabled value= "Tambah Kategori Baru"/></td>

                </tr>
                <tr> 
                    <th>Jawaban Soal</th>
                   <td colspan="2"><input type="text" name="jawaban_ajkuiz" value="<%= res.jawaban_ajkuiz %>" /></td>
                </tr>
                <tr> 
                    <td colspan="3"><b><input type="submit" class="tombol" name="Submit" value="Edit Soal" /></td>
                </tr>
            </table>
            <input type="hidden" name="_method" value="PUT" />
        </form>
    </main>
    <footer></footer>
</body>

<script>
document.getElementById('kategoriBox').onchange = function() {
    document.getElementById('kategoriText').disabled = !this.checked;
    document.getElementById('kategori_ajkuiz').disabled = this.checked;
};
</script>